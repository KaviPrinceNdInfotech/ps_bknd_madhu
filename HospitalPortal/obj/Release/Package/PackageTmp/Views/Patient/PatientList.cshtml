@model HospitalPortal.Models.ViewModels.PatientListModel
@{
    ViewBag.Title = "PatientList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string role = HospitalPortal.Utility.UserIdentity.UserRole;
}


<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="~/js/jquery.doubleScroll.js"></script>
<style>
    #mainContainer {
        width: 99%;
        margin-top: 1%;
        margin-left: 1%;
    }

    .double-scroll {
        width: 100%;
    }
</style>

@using (Html.BeginForm()) {
<div class="row">
    <div class="col-md-4">
        Search By Name or Mobile No 
    </div>
    <div class="col-md-3" style="margin-left: -6%;">
        <input type="text" name="term" id="term" placeholder="Name/Mob.No./Reg.No" />
    </div>
    <div class="col-md-3">
        <input type="submit" value="Filter" class="btn btn-primary" />
    </div>
</div>
}


<div id="mainContainer">


    <div class="row">
        <div class="col-md-12">
            <h3>User List</h3><hr />
        </div>
    </div>
        <div class="double-scroll">
            <table id="tbl" class="table table-bordered" >
                <thead>
                    <tr>
                        <th>Patient Reg. No</th>
                        <th>Name</th>
                        <th>Franchise/Id</th>
                        <th>Email Id</th>
                        <th>Mobile Number</th>
                        <th>Location</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @foreach(var item in Model.Patient)
    {
                    <tr>
                        <td>@item.PatientRegNo</td>
                        <td>@item.PatientName</td>
                        <td>
                            @if (item.vendorId == 0 || item.vendorId == null)
                            {
                                if (role == "admin")
                                {
                                    <a href="/Admin/ShareToVendor?Id=@item.Id&Role=Patient">Share To Vendor</a>
                                }
                            }
                            else
                            {
                                @item.VendorName <span>/ @item.UniqueId</span>
                            }
                        </td>

                        <td>@item.EmailId</td>
                        <td>@item.MobileNumber</td>
                        <td>@item.Location</td>
                        <td>@item.CityName</td>
                        <td>@item.StateName</td>
                        <td><a href='/Patient/Edit?Id=@item.Id' class='btn btn-info' onclick="return confirm('Are You Sure Wants To Edit?')"><i class='fa fa-pencil'></i></a>
                            @*<a href="/Common/BankDetails?Id=@item.AdminLogin_Id" class="btn btn-primary">Bank Details</a>*@
                        @if (role == "admin")
                        {
                            <a href="/AdminOperation/RefundMoney?Id=@item.Id" class="btn btn-primary">Refund</a>
                        }
                        </td>
                        
                    </tr>
                }
            </table>
        </div>
    </div>
    <nav aria-label="Page navigation example">
            <ul class="pagination">
                 @*<li class="page-item"><a class="page-link" href="#">Previous</a></li>*@
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.PageNumber)
                    {
                        <li class="page-item active"><a class="page-link" href="/Patient/PatientList?pageNumber=@i">@i</a></li>

                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" href="/Patient/PatientList?pageNumber=@i">@i</a></li>

                    }
                }
                @*<li class="page-item"><a class="page-link" href="#">Next</a></li>*@
            </ul>
        </nav>



<script>
    $('.double-scroll').doubleScroll();
</script>