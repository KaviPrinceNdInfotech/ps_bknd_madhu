@model HospitalPortal.Models.ViewModels.HealthCheckupPatientList
@{
    ViewBag.Title = "TestList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-bottom:5%;">Test List of Patient @Model.HospitalReports.FirstOrDefault().PatientName</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Patient Name</th>
            <td>@Model.HospitalReports.FirstOrDefault().PatientName</td>
            <th>Patient Address</th>
            <td>
                @Model.HospitalReports.FirstOrDefault().Location,
                @Model.HospitalReports.FirstOrDefault().CityName,
                @Model.HospitalReports.FirstOrDefault().StateName
            </td>
            <th>Email ID</th>
            <td>
                @Model.HospitalReports.FirstOrDefault().EmailId
            </td>
        </tr>
        <tr>
            <th>Mobile No.</th>
            <td>@Model.HospitalReports.FirstOrDefault().MobileNumber</td>
        </tr>
    </thead>
    <tbody>
        <tr><th>Test List</th></tr>
        @foreach (var item in Model.HospitalReports)
        {
            <tr>
                <td>
    @item.TestName
            </td>
            <td>@item.Department</td>
                <td><a href="~/HospitalReports/@item.File" target="_blank" class="btn btn-default">View Test Report</a></td>
            </tr>
        }
    </tbody>
</table>


