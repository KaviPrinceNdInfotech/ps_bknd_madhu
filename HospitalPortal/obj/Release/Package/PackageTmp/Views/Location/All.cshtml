@model IEnumerable<HospitalPortal.Models.ViewModels.LocationDTO>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}
     
<style>
    #mainContainer { 
        margin-top: 1%;
        margin-left: 1%;
    }
</style>


    <div id="mainContainer">
        <div class="row">
            <div class="col-md-6">
                @Html.ActionLink("Add More", "Add", null, new { @class = "btn btn-info" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h3>Address</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
               <table id="myTable" class="table table-bordered">
                 <thead style="background-color:lavender;">
                     <tr>
                         <th>Sr No.</th>
                         <th>Address</th>
                         <th>District</th>
                         <th>State</th>
                         <th>Action</th>
                     </tr>
                 </thead>
                   <tbody>
                       @foreach(var item in Model)
                       {
                           <tr>
                               <td>@count</td>
                               <td>@item.LocationName</td>
                               <td>@item.CityName</td>
                               <td>@item.StateName</td>
                               <td>
                                   @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })*@
                                   @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })*@
                                   @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to Edit?');", @class = "btn btn-info" })
                                   @Html.ActionLink("Delete", "Delete", new { id = item.Id },
    new { onclick = "return confirm('Are sure wants to delete?');", @class = "btn btn-danger" })
                               </td>
                           </tr>
                           count++;
                       }
                   </tbody>
               </table>
            </div>
        </div>
    </div>

 