@model HospitalPortal.Models.ViewModels.AmbulancesReport
@{
    Layout = null;
}

<style>
    #main {
        margin: 6%;
    }
</style>
<link href="/css/bootstrap.min.css" rel="stylesheet" />
<div id="main">
    @*<a href="/VendorReport/Doctor" class="btn btn-primary" style="margin-top:1%; margin-bottom:2%;">Back</a>*@

    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-4">
                <input type="text" id="year" class="form-control" placeholder="Enter Any Year" />
            </div>
            <div class="col-md-4">
                <input type="button" id="test" value="Search" class="btn btn-primary" />
            </div>
        </div>
    }

    @if (Model.Ambulance == null)
    {
        if (TempData["msg"] != null)
        {
            <h2 style="color:blueviolet">
                @TempData["msg"]
            </h2>
        }
    }
    else
    {
        <table id="tables" class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        Vehicle Number
                    </th>
                    <th>
                        Vehicle Name
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Ambulance)
                {
                    <tr>
                        <td>
                            @item.VehicleNumber
                        </td>
                        <td>
                            @item.VehicleName
                        </td>
                        <td>
                            <a href="/AmbulanceReport/YearlyRecord?Id=@item.Id">View Record</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<script src="~/Scripts/Library/jquery-1.7.1.min.js"></script>
<link href="~/css/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui.js"></script>
<script>
    $(".datepicker").datepicker().datepicker('setdate', 'today');

    //$(".datepicker").datepicker({dateFormat: "yy/mm/dd",}).val();

    $("#test").click(function () {
        var year = $("#year").val();
        $.ajax({
            url: "/AmbulanceReport/Yearly?year=" + year + "",
            type: "get",
            success: function (response) {
                console.log(response);
                $("#prevAtt").html(response);
            },
            error: function (error) {
                console.log(error.responseText);
                msg.text("");
            }
        });
    })
</script>