@model HospitalPortal.Models.ViewModels.EmployeeDTO
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<style>
    #mainContainer
    {
        width:60%;
        margin-top:1%;
        margin-left:1%;
    }

</style>

@using (Html.BeginForm())
{
<div id="mainContainer">

    <div class="row">
       <div class="col-md-6">
          @Html.ActionLink("Show All", "All", null, new { @class="btn btn-info"})
       </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Add Employee Info</h3>
        </div>
    </div>

       @*@Html.HiddenFor(a => a.Id)
       @Html.HiddenFor(a=>a.IsDeleted)*@
       @Html.Partial("~/Views/Shared/_DisplayMessage.cshtml")


    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
              Name * @Html.TextBoxFor(a => a.EmployeetName, new { @class = "form-control" })
             <span class="red">
                 @Html.ValidationMessageFor(a => a.EmployeetName)
             </span>
            </div>

            <div class="form-group">
                Mobile No * @Html.TextBoxFor(a => a.MobileNumber, new { @class = "form-control" })
                <span class="red">
                    @Html.ValidationMessageFor(a => a.MobileNumber)
                </span>
            </div>

            <div class="form-group">
                Email * @Html.TextBoxFor(a => a.EmailId, new { @class = "form-control" })
                <span class="red">
                    @Html.ValidationMessageFor(a => a.EmailId)
                </span>
            </div>
          
            <div class="form-group">
                Employee Id * @Html.TextBoxFor(a => a.EmployeeId, new { @class = "form-control" })
                <span class="red">
                    @Html.ValidationMessageFor(a => a.EmployeeId)
                </span>
            </div>

            <div class="form-group">
                Address * @Html.TextAreaFor(a => a.EmployeeAddress, new { @class = "form-control" })
                <span class="red">
                    @Html.ValidationMessageFor(a => a.EmployeeAddress)
                </span>
            </div>
            @*<div class="form-group">
                Pin Code * @Html.TextBoxFor(a => a.PinCode, new { @class = "form-control" })
                <span class="red">
                    @Html.ValidationMessageFor(a => a.PinCode)
                </span>
            </div>*@
            <div class="form-group">
                Salary * @Html.TextBoxFor(a => a.Salary, new { @class = "form-control" })
                <span class="red">
                    @Html.ValidationMessageFor(a => a.Salary)
                </span>
            </div>

            <div class="form-group">
               <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
</div>
}