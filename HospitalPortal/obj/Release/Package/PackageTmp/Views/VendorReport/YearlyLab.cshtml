@model HospitalPortal.Models.ViewModels.ReportDetails

@{
    ViewBag.Title = "ViewReport";
}

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">
            <input type="text" id="year" class="form-control" placeholder="Enter Any Year" />
        </div>
        <div class="col-md-4">
            <input type="button" id="test" value="Search" class="btn btn-primary" />
        </div>
    </div>
}
@if (Model.Vendors == null)
{
    if (TempData["msg"] != null)
    {
        <h2 style="color:blueviolet">
            @TempData["msg"]
        </h2>
    }
}
else
{
    <table id="tables" class="table table-responsive" style="margin-left: -20%;">
        <thead>
            <tr>
                <th>
                    Vendor Name
                </th>
                <th>
                    Company Name
                </th>
                @*<th>
                        Added Doctors!!
                    </th>*@
                <th>
                    Total Amount
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Vendors)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Name1
                    </td>
                    @{

                    }
                    <td>
                        @item.Counts
                    </td>
                    @*@{
                            double amt = item.Counts * ViewBag.Payment;
                        }
                        <td>
                            @amt
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
}
<script src="~/Scripts/Library/jquery-1.7.1.min.js"></script>
<script>
    $("#test").click(function () {
        debugger
        var year = $("#year").val();
        $.ajax({
            url: "/VendorReport/YearlyLab?year=" + year + "",
            type: "get",
            success: function (response) {
                $("#prevAtt").html(response);
            },
            error: function (error) {

            }

        });
    });
</script>