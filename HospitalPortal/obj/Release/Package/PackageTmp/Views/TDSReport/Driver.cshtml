@model HospitalPortal.Controllers.AmbulancePaymentController.AmbulanceList

@{
    ViewBag.Title = "Driver";
    Layout= null;
}



<link href="/Styles/bootstrap.min.css" rel="stylesheet" />
<div style="margin:auto; width:85%">
    <h2>Ambulance TDS Report</h2>
    <div class="row" style="margin-bottom: 3%;">
        <div class="col-md-3">
            @Html.TextBoxFor(a => a.RequestDate, new { @class = "datepicker form-control", required = "required" })
        </div>
        <div class="col-md-3">
            <input type="button" id="test" value="Search" class="btn btn-primary" />
        </div>
        <div class="col-md-3">
            @Html.TextBoxFor(a => a.VehicleNumber, new { @class = "form-control", required = "required", placeholder = "Search by Name" })
        </div>
        <div class="col-md-3">
            <input type="button" id="test2" value="Search" class="btn btn-primary" />
        </div>
    </div>

    @if (Model.Ambulance == null)
    {
        if (TempData["msg"] != null)
        {
            @TempData["msg"];
        }
    }
    else
    {

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Vehicle Number
                    </th>
                    <th>
                        Driver Name
                    </th>
                    <th>
                        Total Amount
                    </th>
                    <th>
                        TDS Amount(in %)
                    </th>
                    <th>
                        TDS Amount
                    </th>
                    <th>
                        Payable Amount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Ambulance)
                {
                    <tr>
                        <td>@item.VehicleNumber</td>
                        <td>
                            @item.DriverName
                        </td>
                        <td> ₹ @item.Amount </td>
                        <td>
                            @ViewBag.Commission %
                        </td>
                        @{
                            double amt = (Math.Round((double)item.Amount * ViewBag.Commission) / 100);
                            double Value = (double)item.Amount - amt;
                        }
                        <td>₹ @Math.Round(amt)</td>
                        <td>₹ @Math.Round(Value)</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.PageNumber)
                {
                    <li class="page-item active"><a class="page-link" href="/CommisionReport/Driver?pageNumber=@i">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" href="/CommisionReport/Driver?pageNumber=@i">@i</a></li>
                }
            }
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>

</div>
<script src="~/Scripts/Library/jquery-1.7.1.min.js"></script>
<link href="~/css/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui.js"></script>
<script>
 $(".datepicker").datepicker().datepicker('setdate','today');

 $("#test").click(function () {
     var date = $("#RequestDate").val();
     $.ajax({
         url: "/TDSReport/Driver?term=Driver&RequestDate=" + date + "",
         type: "get",
         success: function (response) {
             console.log(response);
             $("#prevAtt").html(response);
         },
         error: function (error) {
             console.log(error.responseText);

         }
     });

 });


 $("#test2").click(function () {
     debugger
     var name = $("#VehicleNumber").val();
     var date = $("#RequestDate").val();
     $.ajax({
         url: "/TDSReport/Driver?term=Driver&Name='" + name + "'&RequestDate=" + date + "",
         type: "get",
         success: function (response) {
             console.log(response);
             $("#prevAtt").html(response);
         },
         error: function (error) {
             console.log(error.responseText);

         }
     });

 });
</script>
