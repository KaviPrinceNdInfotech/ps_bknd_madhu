@model HospitalPortal.Models.ViewModels.VendorPaymentDTO

@{
    ViewBag.Title = "VendorReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="row" style="margin-bottom:2%;">
        
        <div class="col-md-3">
            <input type="text" name="date" autocomplete="off" class="form-control datepicker" placeholder="Search by Date" />
        </div>
        <div class="col-md-3">
            <input type="submit" value="click" class="btn btn-primary" />
        </div>
    </div>
}

@if (Model.Vendorses == null)
{
    <h2>No Records</h2>
}
else
{
    <table id="table_id" class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Vendor Name
                </th>
                <th>
                    Company's Name
                </th>
                <th>
                    TDS Amount
                </th>
                <th>
                    Total Amount
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Vendorses)
            {
                <tr>
                    <td>@item.VendorName</td>
                    <td>@item.CompanyName</td>
                    <td>@item.Amount</td>
                    @{
                        
                        double? amt = item.Amount * ViewBag.tds / 100;
                        double? total = (double)item.Amount - amt;
                    }
                    <td>
                        @amt
                    </td>
                    <td>
                        @total
                    </td>
                    <td><a href="/Vendor/VehicleDetails?id=@item.Id" class="btn btn-primary">View Details</a></td>
                </tr>
                        }
        </tbody>
    </table>
                        }
<script src="~/Scripts/Library/jquery-1.7.1.min.js"></script>
@*<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>*@
<script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">

<script type="text/javascript">
        $('#table_id').DataTable();
</script>

