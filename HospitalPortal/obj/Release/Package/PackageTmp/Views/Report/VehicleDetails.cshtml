@model HospitalPortal.Models.ViewModels.VendorPaymentDTO

@{
    ViewBag.Title = "VehicleDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center; margin-bottom:2%">Vehicle Report</h2>

<table class="table table-bordered">
    <thead>

        @if (Model.VendorsVehicle.Count() != 0)
        {
            <tr>
                <th>Vendor Name</th>
                <td> @Model.VendorsVehicle.FirstOrDefault().VendorName</td>
                <th>Company Name</th>
                <td> @Model.VendorsVehicle.FirstOrDefault().CompanyName</td>
            </tr>
        }
        else
        {
            <tr>
                <th>Vendor Name</th>
                <td>@Model.VendorName</td>
                <th>Company Name</th>
                <td>@Model.CompanyName</td>
            </tr>
        }
    </thead>
</table>

