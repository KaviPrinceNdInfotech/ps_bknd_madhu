@model HospitalPortal.Models.ViewModels.ReportDTO
@{
    ViewBag.Title = "NurseReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<h2>NurseReport</h2>
<div class=" row">
    <div class="col-md-3">
        <div class=" form-group">
            <a href="@Url.Action("DownloadNurseExcelForBank", "Report")">
                <img src="https://www.pinclipart.com/picdir/big/178-1780962_download-105-free-excel-icons-here-excel-download.png" alt="List View" style="width: 55px;">
            </a>
        </div>
    </div>
</div>
<div style="margin:auto; width:90%">
    @using (Html.BeginForm())
    {
    <div class="row" style="display:none;">
        <div class="col-md-3">
            Select Nurse Type
        </div>
        <div class="col-md-3">
            @Html.DropDownListFor(x => x.Id, Model.NurseTypeList, "Select Nurse Type", new { @class = "form-control", style = "height: calc(3.25rem + 2px) !important;" })
        </div>
        <div class="col-md-3">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
    }
    <div style="margin-top:3%">
       
        <table id="table_id" class="display">
            <thead style="background-color:lavender;">
                <tr>
                    <th>Sr No.</th>
                    <th>
                        Nurse Name (Id)
                    </th>
                    <th>
                        Nurse Type
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            @if (Model.NurseList == null)
            {
                <div class="alert alert-danger">No Record Availbale.</div>
            }
            else
            {
                <tbody>
                    @foreach (var item in Model.NurseList)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@item.NurseName (@item.NurseId)</td>
                            <td>@item.NurseTypeName</td>
                            <td><a href="/Report/ViewNurseList?Id=@item.Id" class="btn btn-primary">View Details</a></td>
                        </tr>
                        count++;
                    }
                </tbody>
            }
        </table>
      
    </div>
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>


    <script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">

    <script type="text/javascript">
        $('#table_id').DataTable();
    </script>

</div>
