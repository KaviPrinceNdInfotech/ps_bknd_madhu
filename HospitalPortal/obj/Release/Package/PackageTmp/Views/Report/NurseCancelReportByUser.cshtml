@model HospitalPortal.Models.ViewModels.cancelReport
@{
    ViewBag.Title = "NurseCancelReportByUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    #mainContainer {
        width: 100%;
        margin-left: 1%;
        margin-top: 1%;
    }
</style>
<div id="mainContainer">

    <div class="row">
        <div class="col-md-12">
            <h3>Nurse Cancel Report</h3><hr />
        </div>
    </div>


    @using (Html.BeginForm())
    {
        <div id="doublescroll">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr style="background-color:gainsboro">

                                <th>Nurse Name</th>
                                <th>Mobile Number</th>
                                <th>Locatoion</th> 
                                <th>Fee</th> 
                                <th>Payment Date</th>
                                <th>Service Acceptancedate</th>
                                <th>Request Date</th>
                                <th>Cancel By(Patient Name)</th>

                        </thead>
                        @foreach (var item in Model.NurseCancel)
                        {
                            <tr style="background-color:oldlace">
                                <td>@item.NurseName</td>
                                <td>@item.MobileNumber</td>
                                <td>@item.Location</td>
                                <td>@item.Fee</td>
                                <td>@item.PaymentDate</td>
                                <td>@item.ServiceAcceptanceDate</td>
                                <td>@item.RequestDate</td>
                                <td>@item.PatientName</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    }
</div>

