    <script type="text/javascript">
        $(function () {
            $('#EmpList').multiselect({
                //includeSelectAllOption: true
            });

            $('#btnSelected').click(function () {
                var selected = $("#EmpList option:selected");
                var message = "";
                selected.each(function () {
                    message = $(this).val();
                    $.get('/Test/GetRecord?Id=' + message)
                        .success(function (response) {
                            let grandTotal = 0;
                            let CurrentAmt = 0;
                            let Remaining = parseInt($("#grandTotal").val());
                            if (Remaining == 0) {
                                CurrentAmt = grandTotal + response;
                            }
                            else {
                                CurrentAmt = Remaining + response;
                            }
                            $("#grandTotal").val(CurrentAmt);
                            $("#GrandTotal").val(CurrentAmt);
                        })
                });
                $('#btnSelected').prop('disabled', true);
            });

            $("#Discount").on("keyup", calculate);

            function calculate() {
                debugger
                var charge = $(this).val();
                if (!charge)
                    charge = 0;
                var newGrandT = parseFloat($("#grandTotal").val());
                var sum = 0;
                $("#Discount").each(function () {
                    newGrandT -= parseFloat(charge);
                });
                var txtGrandTotal = $("#GrandTotal");
                txtGrandTotal.val(newGrandT.toFixed(0));
            }

            $("#Gst").change(function () {
                debugger
                var discount = $(this).val();
                if (!discount)
                    discount = 0;
                var gst = ["5", "12", "18", "28"];
                if ($.inArray(discount, gst) >= 0) {
                    var discountInPercent = parseInt(discount);
                    let gt = parseInt($("#GrandTotal").val());
                    var discountValue = gt * discountInPercent / 100;
                    var newGt = gt + discountValue;
                    var txtGrandTotal = $("#GrandTotal");
                    txtGrandTotal.val(newGt.toFixed(0));
                }
                else {
                    alert("Kindly, Enter Valid GST Tax Rate.");
                }
            });
        });
    </script>
