@model HospitalPortal.Models.ViewModels.ViewPayOutHistory
@{
    ViewBag.Title = "ViewPayoutHistory";
    Layout = "~/Views/Shared/_PayoutLayoutPage.cshtml";

}

<h2>Chemist Payout History</h2>

<div class=" row">
    <div class="col-md-3">
        <div class=" form-group">
            <a href="@Url.Action("DownloadChemistExcel", "Payout")">
                <img src="https://www.pinclipart.com/picdir/big/178-1780962_download-105-free-excel-icons-here-excel-download.png" alt="List View" style="width: 55px;">
            </a>
        </div>
    </div>
</div>

<div style="margin:auto; width:95%">
    @if (Model.HistoryOfChemist_Payout == null)
    {
        if (TempData["msg"] != null)
        {
            <h4 style="color:red">@TempData["msg"]</h4>
        }
    }
    else
    {
<table id="myTable" class="table table-bordered">
    <thead style="background-color:lavender;">
        <tr>
            <th>Serial No</th>
            <th>Chemist Name</th>
            <th>Payment Date</th>
            <th>Amount</th>
            @*<th>Status</th>*@
        </tr>
        </thead>
    <tbody>
        @{int RowNo = 0;}
        @foreach (var item in Model.HistoryOfChemist_Payout)
        {
            <tr>
                <td>
                    @{RowNo++;} @RowNo
                </td>
                <td>@item.ChemistName</td>
                <td>@item.PaymentDate.Value.ToShortDateString()</td>
                <td>@item.Amount</td>
                @*<td>
                        @if (Convert.ToInt32(item.IsGenerated) == 1)
                        {
                            <a href="/Payout/UpdateChemistStatus?id=@item.Id" class="btn btn-primary">Generated</a>
                        }
                        else
                        {
                            <a href="/Payout/ChemistPay?Id=@item.Chemist_Id&Amount=@item.Amount" class="btn btn-danger">Not Generated</a>
                        }

                        @if (Convert.ToInt32(item.IsPaid) == 1)
                        {
                            <a href="/Payout/UpdateChemistPayment?id=@item.Id" class="btn btn-primary">Paid</a>
                        }
                        else
                        {
                            <a href="/Payout/UpdateChemistPayment?id=@item.Id" class="btn btn-danger">Not Paid</a>
                        }
                    </td>*@
            </tr>
        }
    </tbody>
</table>
                                }
</div>
