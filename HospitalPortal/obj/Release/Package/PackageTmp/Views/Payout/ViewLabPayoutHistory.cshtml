@model HospitalPortal.Models.ViewModels.ViewPayOutHistory
@{
    ViewBag.Title = "ViewLabPayoutHistory";
    Layout = "~/Views/Shared/_PayoutLayoutPage.cshtml";

}

<h2>Lab Payout History</h2>

<div style="margin:auto; width:95%">
    <div style="margin-top:3%; margin-bottom:3%;">Lab Name : <h2 style="color:brown">@Model.LabName</h2></div>
@if (Model.HistoryOfLab_Payout == null)
{
    if (TempData["msg"] != null)
    {
        <h3>@TempData["msg"]</h3>
    }
}
else
{
<table class="table table-hover">
    <thead style="background-color:lavender;">
        <tr>
            <th>Serial No</th>
            <th>Patient Name/Id</th>
            <th>Mobile Number</th>
            <th>Email Id</th>
            <th>Test Date</th>
            <th>Payment Date</th>
            <th>Paid Amount</th>
        </tr>
        </thead>
    <tbody>
        @{int RowNo = 0;}
        @foreach (var item in Model.HistoryOfLab_Payout)
        {
            <tr>
                <td>
                    @{RowNo++;} @RowNo
                </td>

                <td>@item.PatientName (@item.PatientRegNo)</td>
                <td>@item.MobileNumber</td>
                <td>@item.EmailId</td>
                <td>@item.TestDate.Value.ToShortDateString()</td>
                <td>@item.PaymentDate.Value.ToShortDateString()</td>
                <td>@item.Amount</td>
                @*<td>


                        @if (Convert.ToInt32(item.IsGenerated) == 1)
                        {
                            <a href="/Payout/UpdateLabStatus?id=@item.Id" class="btn btn-primary">Generated</a>
                        }
                        else
                        {
                            <a href="/Payout/UpdateLabStatus?Id=@item.Id&Amount=@item.Amount" class="btn btn-danger">Not Generated</a>
                        }

                        @if (Convert.ToInt32(item.IsPaid) == 1)
                        {
                            <a href="/Payout/UpdateLabPayment?id=@item.Id" class="btn btn-primary">Paid</a>
                        }
                        else
                        {
                            <a href="/Payout/UpdateLabPayment?id=@item.Id" class="btn btn-danger">Not Paid</a>
                        }
                    </td>*@
            </tr>
        }
    </tbody>
</table>

                            }
</div>
