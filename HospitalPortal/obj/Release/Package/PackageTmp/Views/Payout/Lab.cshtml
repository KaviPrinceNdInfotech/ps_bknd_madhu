@if (Model.LabHistory == null)
{
        <h2 style="color:blueviolet">
            @TempData["msg"]
        </h2>
}
else
{
    <table id="tables" class="table table-responsive">
        <thead>
            <tr>
                <th>
                    User Id
                </th>
                <th>
                    Lab Name
                </th>
                <th>
                    Basic Amount
                </th>
                <th>
                    Transaction Fee
                </th>
                <th>
                    GST in %
                </th>
                <th>
                    Total Amount
                </th>
                @*<th>Deducted Amout</th>*@
                <th>
                    Commission in %
                </th>
                <th>
                    TDS in %
                </th>
                <th>
                    Payable Amount
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LabHistory)
            {
                <tr>
                    <td>
                        @item.lABId
                    </td>
                    <td>
                        @item.LabName
                    </td>
                    <td>
                        @item.Amount
                    </td>
                    @{
                        double? razorpaycomm = @item.Amountwithrazorpaycomm;
                        double? basicamt = @item.Amount;
                        double? razarfeeamt = razorpaycomm - basicamt;

                    }
                    <td>@String.Format("{0:F2}", razarfeeamt) </td>
                    <td>
                        @ViewBag.gstAmount
                    </td>
                    @{

                        double? GSTAmt = (item.Amount * ViewBag.gstAmount) / 100;
                        //double? WithGSTAmt = item.Amount + GSTAmt;
                        double? WithGSTAmt = item.Amount + razarfeeamt - (GSTAmt);

                    }
                    <td>@WithGSTAmt</td>


                    <td>@ViewBag.Amount</td>
                    <td>@ViewBag.tdsAmount</td>
                    @{

                        //double? commAmt = (item.Amount * ViewBag.Amount) / 100;
                        //double? tdsamt = (item.Amount * ViewBag.tdsAmount) / 100;
                        //double? Value = item.Amount - (commAmt + tdsamt);
                        double? commAmt = (item.Amount * ViewBag.Amount) / 100;
                        double? tdsamt = (item.Amount * ViewBag.tdsAmount) / 100;
                        double? Value = item.Amount - (commAmt + tdsamt);

                    }

                    <td>@Value</td>
                    <td>
                        <a href="/Payout/LabPay?Lab_Id=@item.Lab_Id&Amount=@Value" class="btn btn-primary">Pay</a>
                    </td>
                    <td>
                        <a href="/Payout/ViewLabPayoutHistory?Id=@item.Lab_Id" class="btn btn-primary">View Payout History</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

