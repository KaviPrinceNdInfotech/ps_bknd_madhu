@model HospitalPortal.Models.ViewModels.AddTestByLabDTO
@{
    ViewBag.Title = "EditTest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">Edit Test</h2>

@using (Html.BeginForm())
{
    <div id="mainContainer">
        <div class="row">
            <div class="col-md-3">Select Any Test Name</div>
            <div class="col-md-3">
                @Html.HiddenFor(a => a.Id)
                @Html.HiddenFor(a => a.Lab_Id)
                @Html.DropDownListFor(a => a.Test_Id, Model.Tests, "Select", new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                Test Amount
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(a => a.TestAmount, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
               Test Description
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(a => a.TestDescription, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-3">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>

    </div>
}

