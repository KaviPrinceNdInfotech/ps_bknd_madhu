@model HospitalPortal.Models.ViewModels.NurseDTO
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
}

<style>
    #mainContainer {
        width: 60%;
        margin-top: 1%;
        margin-left: 1%;
    }
</style>

@using (Html.BeginForm("Edit", "Nurse", FormMethod.Post, new { @encType = "multipart/form-data" }))
{
    <div id="mainContainer">

        <div class="row">
            <div class="col-md-6">
                <h3>Update Profile</h3>
            </div>
        </div>
        <a href="/Nurse/All" class="btn btn-info">Back</a>
        @Html.HiddenFor(a => a.Id)
        @Html.HiddenFor(a => a.IsDeleted)
        @Html.HiddenFor(a => a.AdminLogin_Id)
        @Html.HiddenFor(a => a.IsApproved)
        @Html.HiddenFor(a => a.EmailId)
        @Html.HiddenFor(a => a.MobileNumber)
        @Html.HiddenFor(a => a.Password)
        @*@Html.HiddenFor(a => a.AadharImage)*@
        @Html.HiddenFor(a => a.CertificateImage)
        @Html.HiddenFor(a => a.VerificationDoc)
        @Html.HiddenFor(a => a.IsCheckedTermsCondition)
        @Html.Partial("~/Views/Shared/_DisplayMessageUpdate.cshtml")


        <div class="row">
            <div class="col-md-12">

                <div class="form-group">
                    Nurse Name * @Html.TextBoxFor(a => a.NurseName, new { @class = "form-control" })
                    <span class="red">
                        @Html.ValidationMessageFor(a => a.NurseName)
                    </span>
                </div>

                <div class="form-group">
                    Nurse Profile * @Html.DropDownListFor(a => a.NurseType_Id, Model.NurseTypes, "Select", new { @class = "form-control" })
                    <span class="red">
                        @Html.ValidationMessageFor(a => a.NurseType_Id)
                    </span>
                </div>
                 

                <div class="form-group">
                    State * @Html.DropDownListFor(a => a.StateMaster_Id, Model.States, "Select", new { @class = "form-control" })
                    <span class="red">
                        @Html.ValidationMessageFor(a => a.StateMaster_Id)
                    </span>
                </div>

                <div class="form-group">
                    City * @Html.DropDownListFor(a => a.CityMaster_Id,
Model.Cities
, "Select", new { @class = "form-control" })
                    <span class="red">
                        @Html.ValidationMessageFor(a => a.CityMaster_Id)
                    </span>
                </div>

                <div class="form-group">
                    Address * @Html.TextAreaFor(a => a.Location, new { @class = "form-control" })
                    <span class="red">
                        @Html.ValidationMessageFor(a => a.Location)
                    </span>
                </div>
                <div class="form-group">
                    PinCode * @Html.TextBoxFor(a => a.PinCode, new { @class = "form-control" })
                    <span class="red">
                        @Html.ValidationMessageFor(a => a.PinCode)
                    </span>
                </div>
                <div class="form-group">
                    Fee/Day * @Html.TextBoxFor(a => a.Fee, new { @class = "form-control", type = "number" })
                    <span class="red">
                        @Html.ValidationMessageFor(a => a.Fee)
                    </span>
                </div>
                <div class="form-group">
                    @{Html.EnableClientValidation(false);}
                    @if (!string.IsNullOrEmpty(Model.CertificateImage))
                    {
                        <img src="/Images/@Model.CertificateImage" class="thumb" />
                    }
                    Certificate * @Html.TextBoxFor(a => a.CertificateFile, new { @class = "form-control", type = "file" })
                    <span class="red">
                        @Html.ValidationMessageFor(a => a.CertificateFile)
                    </span>
                    @{Html.EnableClientValidation(true);}


                </div>

                <div class="form-group">
                    Certificate Number * @Html.TextBoxFor(a => a.CertificateNumber, new { @class = "form-control" })
                    <span class="red">
                        @Html.ValidationMessageFor(a => a.CertificateNumber)
                    </span>
                </div> 

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-info" />
                </div>
            </div>
        </div>
    </div>
}

<script src="/Scripts/Library/jquery-1.7.1.min.js"></script>
<script src="/Scripts/Library/jquery-ui-1.8.20.min.js"></script>

@Html.Partial("~/Views/Shared/_StateCityLocCascading.cshtml")

@if (Model.IsApproved == false)
{
<script src = "~/Scripts/EditAlert.js" ></script>
}