@model HospitalPortal.Models.ViewModels.AmbulancesReport
@{
    ViewBag.Title = "Ambulance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ambulance Y/M/W/D Report</h2>

<div class="row">
    <div class="col-md-4">
        <select id="tp" class="form-control" required="required">
            <option value="Daily">
                Select Any
            </option>
            <option value="Daily">
                Daily
            </option>
            <option value="Weekly">
                Weekly
            </option>
            <option value="Monthly">
                Monthly
            </option>
            <option value="Yearly">
                Yearly
            </option> 
        </select>
    </div>
    <div class="col-md-4">
        <input type="button" value="Check" id="btnCheck" class="btn btn-primary" />
    </div>


</div>
<div id="prevAtt" style="margin-top: 6%;">
</div>

<script src="~/Scripts/Library/jquery-1.7.1.min.js"></script>
<script>
    $("#btnCheck").click(function () {
        debugger
        var Id = $('input:hidden[name=zyx]').val();
        var term = $("#tp").val();
        if (term == "Daily") {
            $.ajax({
                url: "/AmbulanceReport/Daily?term=" + term,
                type: "get",
                success: function (response) {
                    console.log(response);
                    $("#prevAtt").html(response);
                },
                error: function (error) {
                    console.log(error.responseText);
                    //msg.text("");
                }
