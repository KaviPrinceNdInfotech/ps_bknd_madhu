@model HospitalPortal.Models.ViewModels.AmbulancesReport

@{
    Layout = null;
    int count = 1;
}

<style>
    #main {
        margin: 6%;
    }
</style>
<link href="/css/bootstrap.min.css" rel="stylesheet" />
<div id="main">


   
    <table id="table_id" class="table table-bordered">
        <thead style="background-color:lavender;">
            <tr>
                <th>Sr No.</th>
                <th>
                    Vehicle Number
                </th>
                <th>
                    Vehicle Name
                </th>
                <th>Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        @if (Model.Ambulance == null)
        {
            if (TempData["msg"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["msg"]
                </div>
            }
        }
        else
        {
            <tbody>
                @{
                    decimal? totalamount = 0;
                }
                @foreach (var item in Model.Ambulance)
                {
                    <tr>
                        <td>@count</td>
                        <td>
                            @item.VehicleNumber
                        </td>
                        <td>
                            @item.VehicleName
                        </td>
                        @{
                            totalamount += item.Amount;
                        }
                        <td>@item.Amount</td>
                        <td>
                            <a href="/AmbulanceReport/DailyRecord?Id=@item.VehicleId" class="btn btn-primary">View Record</a>
                        </td>
                    </tr>
                                count++;
                            }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" style="text-align: right;">Total:</td>
                    <td>
                        <strong>₹ @totalamount</strong>
                    </td>
                </tr>
            </tfoot>
                            }
        </table>
     
</div>
<script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">

<script type="text/javascript">
    $('#table_id').DataTable(
        {
            stateSave: true,
        });
</script> 
