@model HospitalPortal.Models.ViewModels.AmbulancesReport
@{
    ViewBag.Title = "MonthlyRecord";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Monthly Record</h2>

<style>
    #main {
        margin: 6%;
    }
</style>
<div id="main">

    @using (Html.BeginForm("MonthlyRecord", "AmbulanceReport", FormMethod.Get))
    {
        <div class="row">
            <div class="col-md-4">
                Start Date
                @Html.TextBoxFor(a => a.sdate, new { @class = "datepicker form-control", required = "required" })
            </div>
            <div class="col-md-4">
                End Date
                @Html.TextBoxFor(a => a.edate, new { @class = "datepicker form-control", required = "required" })
            </div>
            <div class="col-md-4">
                <input type="submit" id="test" value="Search" class="btn btn-primary" />
            </div>
        </div>
    }

    @if (Model.Ambulance == null)
    {
        if (TempData["msg"] != null)
        {
            <h2 style="color:blueviolet">
                @TempData["msg"]
            </h2>
        }
    }
    else
    {
        <table id="tables" class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        Patient Name
                    </th>
                    <th>
                        Driver Name
                    </th>
                    <th>
                        Distance
                    </th>
                    <th>
                        PickUp Address
                    </th>
                    <th>
                        Drop Address
                    </th>
                    <th>
                        Amount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Ambulance)
                {
                    <tr>
                        <td>
                            @item.PatientName
                        </td>
                        <td>
                            @item.DriverName
                        </td>
                        <td>
                            @Math.Round((double)item.Distance)
                        </td>
                        <td>
                            @item.ReverseStartLatLong_To_Location
                        </td>
                        <td>
                            @item.ReverseEndLatLong_To_Location
                        </td>
                        <td>@Math.Round((decimal)item.Amount) Rs.</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<script src="~/Scripts/Library/jquery-1.7.1.min.js"></script>
<link href="~/css/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui.js"></script>
<script>
    $(".datepicker").datepicker().datepicker('setdate', 'today');
</script>

