@model HospitalPortal.Models.ViewModels.VendorPaymentDTO
@{
    ViewBag.Title = "VendorReport";
    Layout = null;
}

<h2>Vendor List</h2>

<table id="table_id" class="table table-bordered">
    <thead style="background-color:lavender;">
        <tr>
            <th>
                Vendor Name
            </th>
            <th>
                Company's Name
            </th>
            <th>
                No. Of Vehicle Added!!
            </th>
            <th>
                Total Amount
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    @if (Model.Vendorses != null)
    {
        <tbody>
            @foreach (var item in Model.Vendorses)
            {
                <tr>
                    <td>@item.VendorName</td>
                    <td>@item.CompanyName</td>
                    <td>@item.Counts</td>
                    @{
                        double amt = item.Counts * ViewBag.Payment;
                    }
                    <td>
                        @amt
                    </td>
                    <td><a href="/Vendor/VehicleDetails?id=@item.Id" class="btn btn-primary">View Details</a></td>
                </tr>
            }
        </tbody>
    }
    else
    {
        if (TempData["msg"] != null)
        {
            string msg = TempData["msg"].ToString();
            <div class="alert alert-danger">
                @msg
            </div>
        }
    }

</table>
<script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">

<script type="text/javascript">
    $('#table_id').DataTable(
        {
            stateSave: true,
        });
</script>
<script src="~/Scripts/Library/jquery-1.7.1.min.js"></script>
<link href="~/css/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui.js"></script>

