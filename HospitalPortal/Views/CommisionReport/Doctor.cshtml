@model HospitalPortal.Models.ViewModels.ReportDTO

@{
    ViewBag.Title = "Doctor";
    Layout = null;
}
<link href="/Styles/bootstrap.min.css" rel="stylesheet" />

<h2>Doctor List</h2>
<div style="margin:auto; width:85%">
 
        <div class="row" style="margin-bottom: 3%;">
            <div class="col-md-3">
                @Html.TextBoxFor(a => a.AppointmentDate, new { @class = "datepicker form-control", required = "required" })
            </div>
            <div class="col-md-3">
                <input type="button" id="test" value="Search" class="btn btn-primary" />
            </div>
            <div class="col-md-3">
                @Html.TextBoxFor(a => a.DoctorName, new { @class = "form-control", required = "required", placeholder="Search by Name" })
            </div>
            <div class="col-md-3">
                <input type="button" id="test2" value="Search" class="btn btn-primary" />
            </div>
        </div>
    
    @if (Model.DoctorCommisionReport == null)
    {
        if (TempData["msg"] != null)
        {
            @TempData["msg"];
        }
    }
    else
    {

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Doctor Name
                    </th>
                    <th>
                        Total Amount
                    </th>
                    <th>
                        Commission Amount(in %)
                    </th>
                    <th>
                        Commission Amount
                    </th><th>
    Payable Amount
</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DoctorCommisionReport)
                {
                    <tr>
                        <td>@item.DoctorName</td>
                        <td> ₹ @item.Amount  </td>
                        <td>
                             @ViewBag.Commission %
                        </td>
                        @{
                            double amt = (Math.Round(item.Amount * ViewBag.Commission) / 100);
                            double Value = item.Amount - amt;
                        }
                        <td>₹ @amt</td>
                        <td>₹ @Value</td>
                    </tr>
                            }
            </tbody>
        </table>
                            }

    <nav aria-label="Page navigation example">
