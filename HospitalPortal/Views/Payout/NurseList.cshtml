@model HospitalPortal.Models.ViewModels.ViewPayOutHistory

@{
    ViewBag.Title = "NurseList";
    Layout = "~/Views/Shared/_PayoutLayoutPage.cshtml";
}
<h2>Nurse Payout History</h2>

<div class=" row">
    <div class="col-md-3">
        <div class=" form-group">
            <a href="@Url.Action("DownloadNurseExcel", "Payout")">
                <img src="https://www.pinclipart.com/picdir/big/178-1780962_download-105-free-excel-icons-here-excel-download.png" alt="List View" style="width: 55px;">
            </a>
        </div>
    </div>
</div>

<div style="margin:auto; width:95%">
    @if (Model.HistoryOfNurse_Payout == null)
    {
        if (TempData["msg"] != null)
        {
            <h4 style="color:red">@TempData["msg"]</h4>
        }
    }
    else
    {
<table id="myTable" class="table table-bordered">
    <thead style="background-color:lavender;">
        <tr>
            <th>Serial No</th>
            <th>Nurse Name</th>
            <th>Payment Date</th>
            <th>Amount</th>
        </tr>
        </thead>
    <tbody>
        @{int RowNo = 0;}
        @foreach (var item in Model.HistoryOfNurse_Payout)
        {
            <tr>
                <td>
                    @{RowNo++;} @RowNo
                </td>
                <td>@item.NurseName</td>
                <td>@item.PaymentDate</td>
                <td>@item.Amount</td>
            </tr>
        }
    </tbody>
</table>
                                }
</div>

