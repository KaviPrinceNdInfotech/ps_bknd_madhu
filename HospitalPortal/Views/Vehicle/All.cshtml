@model IEnumerable<HospitalPortal.Models.ViewModels.VehicleDTO>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string role = HospitalPortal.Utility.UserIdentity.UserRole;
}


<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="~/js/jquery.doubleScroll.js"></script>
<style>
    #mainContainer {
        width: 99%;
        margin-top: 1%;
        margin-left: 1%;
    }

    .double-scroll {
        width: 100%;
    }
</style>


<div id="mainContainer">
    @*<div class="row">
            <div class="col-md-6">
                @Html.ActionLink("Add More", "Add", null, new { @class = "btn btn-info" })
            </div>
        </div>*@

    <div class="row">
        <div class="col-md-6">
            <h3>Vehicles</h3>
        </div>
    </div>
    @using (Html.BeginForm("All", "Vehicle", FormMethod.Get))
    {
        <div class="row">
            <div class="col-md-4">
                <input type="text" class="form-control" id="term" name="term" placeholder="Serach by VehicleNumber" />
            </div>
            <div class="col-md-3">
                <input type="submit" class="btn btn-primary" value="Search" />
            </div>
            <div class="col-md-3">
                <a href="/Vehicle/All" class="btn btn-primary">Show All</a>
            </div>
        </div>
    }

    @if (Model.Count() > 0)
    {
    <div class="row">
        <div class="col-md-12">
            <div class="row" style="text-align:center">
                <ul class="pagination">
                    @for (int i = 1; i <= Model.FirstOrDefault().NumberOfPages; i++)
                    {
                        if (Model.FirstOrDefault().Page == i)
                        {
                            <li class="active"><a href="/Vehicle/All?page=@i">@i</a></li>
                        }
                        else
                        {
                            <li><a href="/Vehicle/All?page=@i">@i</a></li>
                        }
                    }

                </ul>
            </div>
            <div class="double-scroll">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Srl.No</th>
                            <th>Vehicle No</th>
                            <th>Ownership Name</th>
                            <th>Franchise</th>
                            <th>Vehicle Type</th>
                            <th>Vehicle Category</th>
                            <th>Driver Charges</th>
                            @*<th>Tax validity</th>*@
                            @*<th>Fitness Cert.</th>
                            <th>Fitness Cert. Validity</th>*@
                            @*<th>Insurrance doc.</th>
                            <th>Insurrance Valid upto</th>*@
                            @*<th>Pollution doc.</th>
                            <th>Pollution Valid upto</th>*@
                            @*<th>RC Image</th>
                            <th>RC Number</th>*@
                            @if (role == "admin")
                        {
                                <th>Approval</th>
                                <th>Action</th>
                        }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                    {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.VehicleNumber</td>
                                <td>@item.HolderName</td>
                                <td>
                                    @if (item.Vendor_Id < 0 || item.Vendor_Id == null)
                                    {
                                        if (role == "admin")
                                        {
                                            <a href="/Admin/ShareToVendor?Id=@item.Id&Role=Vehicle">Share To Vendor</a>
                                        }
                                    }
                                    else
                                    {
                                        @item.VendorName <span>/ @item.UniqueId</span>
                                    }
                                </td>
                                <td>@item.Type</td>
                                <td>
                                    @item.CategoryName <span style="color:red">=> </span>
                                    @item.VehicleTypeName
                                </td>
                                <td>@item.DriverCharges</td>
                                @*<td>@item.Validity.ToString("dd-MMM-yyyy")</td>*@
                                @*<td>
            <a href="/Images/@item.FitnessCerficateImage">
                <img src="/Images/@item.FitnessCerficateImage" class="thumb" />
            </a>
        </td>*@

                                @*<td>@item.FitnessCertificateValidity.ToString("dd-MMM-yyyy")</td>*@
                                @*<td>
            @if (string.IsNullOrEmpty(item.InsuranceImage))
        {
                <span>No image</span>
        }
        else
        {
                <a href="/Images/@item.InsuranceImage"><img src="/Images/@item.InsuranceImage" class="thumb" /></a>
        }
        </td>*@


                                @*<td>
            @if (item.InsurranceDate != null)
        {
                <span> @item.InsurranceDate.Value.ToString("dd-MMM-yyyy") </span>
        }
        </td>*@
                                @*<td>
            @if (string.IsNullOrEmpty(item.PollutionImage))
        {
                <span>No image</span>
        }
        else
        {
                <a href="/Images/@item.PollutionImage"><img src="/Images/@item.PollutionImage" class="thumb" /></a>
        }
        @*</td>
        <td>
            @if (item.PollutionDate != null)
        {
                <span> @item.PollutionDate.Value.ToString("dd-MMM-yyyy") </span>
        }
        </td>*@
                                @*<td>
            @if (string.IsNullOrEmpty(item.RC_Image))
        {
                <span>No image</span>
        }
        else
        {
                <a href="/Images/@item.RC_Image"><img src="/Images/@item.RC_Image" class="thumb" /></a>
        }
        </td>*@
                                @*<td>@item.RC_No</td>*@

                                @if (role == "admin")
                                {
                                    @*<td>
                                        @if (item.IsApproved)
                                        {
                                            @Html.ActionLink("Dispproved", "UpdateStatus", new { id = item.Id, IsApproved = false }, new { @class = "btn btn-danger" })
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Approved", "UpdateStatus", new { id = item.Id, IsApproved = true }, new { @class = "btn btn-success" })
                                        }
                                    </td>*@

                                    <td>
                @if (item.IsApproved)
            {
                    @Html.ActionLink("Approved", "UpdateStatus", new { id = item.Id }, new { @class = "btn btn-success" })
            }
            else
            {
                    @Html.ActionLink("Not Approved", "UpdateStatus", new { id = item.Id }, new { @class = "btn btn-danger" })
            }
            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to Edit?');", @class = "btn btn-info" })
                                <a href="/Common/AmbulaneBankDetails?Id=@item.Id" class="btn btn-primary">Bank Details</a>
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to delete?');", @class = "btn btn-danger" })
                            </td>
                                }
                                <td></td>
                            </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    }
    else
    {
        <span>No Records</span>
    }
</div>

<script>
    $('.double-scroll').doubleScroll();
</script>