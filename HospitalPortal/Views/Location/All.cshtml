@model IEnumerable<HospitalPortal.Models.ViewModels.LocationDTO>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<style>
    #mainContainer {
        width: 60%;
        margin-top: 1%;
        margin-left: 1%;
    }
</style>


    <div id="mainContainer">
        <div class="row">
            <div class="col-md-6">
                @Html.ActionLink("Add More", "Add", null, new { @class = "btn btn-info" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h3>Address</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
               <table id="myTable">
                 <thead>
                     <tr>
                         <th>Address</th>
                         <th>District</th>
                         <th>State</th>
                         <th>Action</th>
                     </tr>
                 </thead>
                   <tbody>
                       @foreach(var item in Model)
                       {
                           <tr>
                               <td>@item.LocationName</td>
                               <td>@item.CityName</td>
                               <td>@item.StateName</td>
                               <td>
                                   @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })*@
                                   @*@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })*@
                                   @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to Edit?');", @class = "btn btn-info" })
                                   @Html.ActionLink("Delete", "Delete", new { id = item.Id },
    new { onclick = "return confirm('Are sure wants to delete?');", @class = "btn btn-danger" })
                               </td>
                           </tr>
                       }
                   </tbody>
               </table>
            </div>
        </div>
    </div>

<script src="/js/jquery-1.11.1.min.js"></script>
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
    $('#myTable').DataTable();
</script>