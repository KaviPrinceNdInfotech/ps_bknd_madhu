@model IEnumerable<HospitalPortal.Models.DomainModels.Discount>

@{
    ViewBag.Title = "DiscountList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-5">Discount List</h2>

<table class="table table-hover table-bordered mt-3">
    <tr class="bg-info text-white">
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountCoupon)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiscountCoupon)
        </td>
        <td>         
            @Html.ActionLink("Delete", "DiscountDelete", "Admin", new { id=item.Id },new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
