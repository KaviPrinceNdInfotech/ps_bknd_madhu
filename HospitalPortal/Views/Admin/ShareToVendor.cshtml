@model HospitalPortal.Models.ViewModels.SharetoVendorDTO
@{
    ViewBag.Title = "ShareToVendor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Share To Vendor</h2>
<style>
    #main {
        width:50%;
        margin:auto;
    }
</style>
<div id="main">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.HiddenFor(a => a.Vendor_Id)
            Franchise * <input type="text" id="txtVdr" name="txtVdr" class="form-control" placeholder="Search by Company Name" />
            <span class="red">
                @Html.ValidationMessageFor(a => a.Vendor_Id)
            </span>
        </div>
        <div class="form-group">
            <input type="submit" value="Share" class="btn btn-primary" />
        </div>
    }
    @if (TempData["msg"] != null)
    {
        @TempData["msg"]
    }
</div>

<script src="/Scripts/Library/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.20.min.js"></script>
<link href="~/css/jquery-ui.min.css" rel="stylesheet" />
<script src="~/js/FranchiseAutoComplete.js"></script>
