@model IEnumerable<HospitalPortal.Models.ViewModels.MedicineDTO>
@{
    ViewBag.Title = "MedicineList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 1;
}

<style>
    #mainContainer {
        width: 60%;
        margin-top: 1%;
        margin-left: 1%;
    }
</style>

<div id="mainContainer">
    <div class="row">
        <div class="col-md-6">
            @Html.ActionLink("Add More", "AddChemistMedicine", null, new { @class = "btn btn-info" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h3>Medicine</h3>
        </div>
    </div>


    @if (TempData["msg"] != null)
    {
        string msg = TempData["msg"].ToString();
        <div class="row">
            <div class="col-md-12">
                @if (msg == "ok")
                {
                    <div class="alert alert-success">
                        Deleted successfully.
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        @msg
                    </div>
                }
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>SN.</th>
                        <th>Medicine Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.MedicineName</td>
                            <td>
                                @Html.ActionLink("Delete", "DeleteMedicine", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to delete?');", @class = "btn btn-danger" })
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

