@model HospitalPortal.Models.ViewModels.CompleteCheckup
@{
    ViewBag.Title = "ViewHealthTest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ViewHealthTest</h2>

@if (Model.HealthTest != null)
{
     <div style="margin-bottom:3%">
        <a href="/AdminOperation/ViewPackage" class="btn btn-primary">Back To List</a>
    </div>
    <div style="margin-top:3%">
        <table class="table table-bordered"style="width:80%">
            <thead>
                <tr style="background-color:#5d6c8a;color:#ffffff">
                    <th>Test Name</th>                    
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.HealthTest)
                {
                    <tr>
                        <td>@item.TestDesc</td>
                        <td>@item.TestAmount</td>     
                        <td><a href="/AdminOperation/EditHealthTest?Id=@item.Id" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                            <a href="/AdminOperation/DeleteHealthTest?Id=@item.Id" class="btn btn-primary"><i class="fa fa-trash-o"></i></a>
                        </td>       
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span>No Records</span>
}

