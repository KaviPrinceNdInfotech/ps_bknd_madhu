@model HospitalPortal.Models.ViewModels.PayoutMasterDTO

@{
    ViewBag.Title = "Payout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Commision</h2>

<div style="margin:auto; width:90%">
    @using (Html.BeginForm("AddPayout", "Common", FormMethod.Post))
    {
        <div class="row" style="margin-bottom:3%">
            <div class="col-md-3">
                <select name="Name" id="Name" class="form-control">
                    <option value="">
                        Select Any
                    </option>
                    <option value="Doctor">
                        Doctor
                    </option>
                    <option value="Ambulance">
                        Ambulance
                    </option>
                    <option value="Hospital">
                        Hospital
                    </option>
                    <option value="Vendor">
                        Vendor
                    </option>
                    <option value="Nurse">
                        Nurse
                    </option>
                    <option value="Lab">
                        Lab
                    </option>
                    <option value="HealthCheckUp">
                        Health Check Up
                    </option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="text" name="Amount" id="Amount" placeholder="Enter the Payout Amount" class="form-control" />
            </div>
            <div class="col-md-3">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
        if (TempData["msg"] != null)
        {
            <h4>@TempData["msg"]</h4>
        }

    }

    @if (Model.payoutList.Count() <= 0)
    {
        <h2>No Records</h2>
    }
    else
    {
        <table class="table table-bordered">
            <tr>
                <th>
                    Department
                </th>
                <th>
                    Amount (In %)
                </th>
                <th>
                    Action
                </th>
            </tr>
            <tbody>
                @foreach (var item in Model.payoutList)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Amount % </td>
                        <td><a href="UpdatePayout?Id=@item.Id" class="btn btn-primary">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
