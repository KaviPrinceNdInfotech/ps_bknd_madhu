@model IEnumerable<HospitalPortal.Models.DomainModels.BankDetail>
@{
    ViewBag.Title = "BankDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Bank Details</h2>

@if(Model.Count() > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>Account No</th>
            <td>@Model.FirstOrDefault().AccountNo</td>
        </tr>
        <tr>
            <th>Branch Name</th>
            <td>@Model.FirstOrDefault().BranchName</td>
        </tr>
        <tr>
            <th>Account Holder Name</th>
            <td>@Model.FirstOrDefault().HolderName</td>
        </tr>
        <tr>
            <th>Branch Address</th>
            <td>@Model.FirstOrDefault().BranchAddress</td>
        </tr>
        <tr>
            <th>IFSC Code</th>
            <td>@Model.FirstOrDefault().IFSCCode</td>
        </tr>
        <tr>
            <th>Mobile Number</th>
            <td>@Model.FirstOrDefault().MobileNumber</td>
        </tr>
        <tr>
            <th>Cheque Image</th>
            <td><img src="~/Images/@Model.FirstOrDefault().CancelCheque" /></td>
        </tr>
    </table>
}
else
{
    <span>No Records</span>
}

