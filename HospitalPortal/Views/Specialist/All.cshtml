@model IEnumerable<HospitalPortal.Models.ViewModels.SpecialistDTO>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    #mainContainer {
        width: 60%;
        margin-top: 1%;
        margin-left: 1%;
    }
</style>

    <div id="mainContainer">
        <div class="row">
            <div class="col-md-6">
                @Html.ActionLink("Add More", "Add", null, new { @class = "btn btn-info" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h3>Specialists</h3>
            </div>
        </div>
        @using (Html.BeginForm("All", "Specialist", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="term" name="term" placeholder="Serach by Specialist Name" />
                </div>
                <div class="col-md-3">
                    <input type="submit" class="btn btn-primary" value="Search" />
                </div>
                <div class="col-md-3">
                    <a href="/Specialist/All" class="btn btn-primary">Show All</a>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-md-12">
               <table class="table table-bordered">
                 <thead>
                     <tr>
                         <th>Specialist</th>
                         <th>Department</th>
                         <th>Action</th>
                     </tr>
                 </thead>
                   <tbody>
                       @foreach(var item in Model)
                       {
                           <tr>
                               <td>@item.SpecialistName</td>
                               <td>@item.DepartmentName</td>
                               <td>
                                   @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to Edit?');", @class = "btn btn-info" })
                                   @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to delete?');", @class = "btn btn-danger" })
                               </td>
                           </tr>
                       }
                   </tbody>
               </table>
            </div>
        </div>
    </div>


