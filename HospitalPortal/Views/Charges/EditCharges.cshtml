@model HospitalPortal.Models.ViewModels.VehicleChargesDTO

@{
    ViewBag.Title = "EditCharges";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Vehicle Charges</h2>

<div style="margin:auto; width:50%">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(a=>a.TypeId)
        @Html.HiddenFor(a => a.Category_Id)
        <div class="form-group">
            Vehicle Category :
            <b> @Model.CategoryName</b>
        </div>
        <div class="form-group">
            Vehicle Type  : <b>@Model.VehicleTypeName</b>
        </div>
        <div class="form-group">
            @Html.TextBoxFor(a => a.Amount, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    }
</div>

